{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "chain":   { "type": "string", "const": "solana" },
    "cluster": { "type": "string", "enum": ["mainnet", "devnet", "testnet"] },
    "tokenMint": { "type": "string", "minLength": 32, "maxLength": 64 },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": { "deepScan": { "type": "boolean" } }
    },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "properties": { "locale": { "type": "string" } }
    }
  },
  "required": ["chain", "cluster", "tokenMint"]
}

