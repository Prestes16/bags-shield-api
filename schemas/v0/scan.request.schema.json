{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "scan.request.v0",
  "type": "object",
  "additionalProperties": false,
  "required": ["chain", "cluster", "tokenMint"],
  "properties": {
    "chain": { "const": "solana" },
    "cluster": { "type": "string", "enum": ["mainnet", "devnet", "testnet"] },
    "tokenMint": {
      "type": "string",
      "minLength": 32,
      "maxLength": 44,
      "pattern": "^[1-9A-HJ-NP-Za-km-z]{32,44}$"
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "deepScan": { "type": "boolean", "default": false }
      }
    },
    "context": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "locale": { "type": "string" }
      }
    }
  }
}
