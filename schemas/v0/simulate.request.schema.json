{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "action": { "type": "string", "enum": ["BUY", "SELL"] },
    "chain":  { "type": "string", "const": "solana" },
    "cluster": { "type": "string", "enum": ["mainnet", "devnet", "testnet"] },
    "mint":   { "type": "string", "minLength": 32, "maxLength": 64 },
    "input": {
      "type": "object",
      "additionalProperties": false,
      "properties": { "sol": { "type": "number", "minimum": 0 } }
    },
    "slippageBps": { "type": "integer", "minimum": 0, "maximum": 10000 },
    "context": {
      "type": "object",
      "additionalProperties": true,
      "properties": { "locale": { "type": "string" } }
    }
  },
  "required": ["action", "chain", "cluster", "mint", "input"]
}

