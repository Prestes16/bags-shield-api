{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "simulate.request.v0",
  "title": "Bags Shield â€” simulate.request.v0",
  "type": "object",
  "additionalProperties": false,
  "required": ["action", "chain", "cluster", "mint", "input", "slippageBps", "context"],
  "properties": {
    "action": { "type": "string", "enum": ["BUY", "SELL"] },
    "chain":  { "type": "string", "enum": ["solana"] },
    "cluster":{ "type": "string", "enum": ["mainnet", "devnet"] },

    "mint": {
      "type": "string",
      "minLength": 32,
      "maxLength": 44,
      "pattern": "^[1-9A-HJ-NP-Za-km-z]{32,44}$"
    },

    "input": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sol"],
      "properties": {
        "sol": { "type": "number", "exclusiveMinimum": 0 }
      }
    },

    "slippageBps": { "type": "integer", "minimum": 0, "maximum": 10000 },

    "context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["locale"],
      "properties": {
        "locale": {
          "type": "string",
          "minLength": 2,
          "maxLength": 10,
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$"
        }
      }
    }
  }
}
