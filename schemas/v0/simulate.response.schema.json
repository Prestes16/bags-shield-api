{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bags-shield/v0/simulate.response.schema.json",
  "type": "object",
  "properties": {
    "success": { "type": "boolean" },
    "response": {
      "type": "object",
      "properties": {
        "actionEcho": { "type": "string", "enum": ["BUY", "SELL"] },
        "mint": { "type": "string", "pattern": "^[1-9A-HJ-NP-Za-km-z]{32,44}$" },
        "tx": {
          "type": "object",
          "properties": {
            "estimatedFeesLamports": { "type": "integer", "minimum": 0 },
            "canExecute": { "type": "boolean" },
            "blockers": { "type": "array", "items": { "type": "string" } }
          },
          "required": ["estimatedFeesLamports", "canExecute", "blockers"],
          "additionalProperties": false
        },
        "outcomeRisk": {
          "type": "object",
          "properties": {
            "badges": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": { "type": "string" },
                  "title": { "type": "string" },
                  "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
                  "impact": { "type": "string", "enum": ["neutral", "negative", "positive"] },
                  "tags": { "type": "array", "items": { "type": "string" } }
                },
                "required": ["key", "title", "severity", "impact"],
                "additionalProperties": false
              }
            },
            "shieldScore": {
              "type": "object",
              "properties": {
                "grade": { "type": "string", "enum": ["A", "B", "C", "D", "E"] },
                "score": { "type": "integer", "minimum": 0, "maximum": 100 },
                "rationale": { "type": "string" },
                "rulesTriggered": { "type": "array", "items": { "type": "string" } }
              },
              "required": ["grade", "score"],
              "additionalProperties": false
            }
          },
          "required": ["badges", "shieldScore"],
          "additionalProperties": false
        },
        "notes": { "type": "string" }
      },
      "required": ["actionEcho", "mint", "tx", "outcomeRisk"],
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "properties": {
        "requestId": { "type": "string" },
        "version": { "type": "string" },
        "timestamp": { "type": "string" },
        "processingMs": { "type": "integer", "minimum": 0 }
      },
      "required": ["requestId", "version", "timestamp", "processingMs"],
      "additionalProperties": false
    }
  },
  "required": ["success", "response", "meta"],
  "additionalProperties": false
}
