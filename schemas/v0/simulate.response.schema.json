{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "simulate.response.v0",
  "title": "Bags Shield â€” simulate.response.v0 (envelope)",
  "type": "object",
  "additionalProperties": false,
  "required": ["success", "response"],
  "properties": {
    "success": { "const": true },

    "response": {
      "type": "object",
      "additionalProperties": false,
      "required": ["actionEcho", "mint", "tx", "outcomeRisk"],
      "properties": {
        "actionEcho": { "type": "string", "enum": ["BUY", "SELL"] },

        "mint": {
          "type": "string",
          "minLength": 32,
          "maxLength": 44,
          "pattern": "^[1-9A-HJ-NP-Za-km-z]{32,44}$"
        },

        "tx": {
          "type": "object",
          "additionalProperties": false,
          "required": ["estimatedFeesLamports", "canExecute", "blockers"],
          "properties": {
            "estimatedFeesLamports": { "type": "integer", "minimum": 0 },
            "canExecute": { "type": "boolean" },
            "blockers": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            }
          }
        },

        "outcomeRisk": {
          "type": "object",
          "additionalProperties": false,
          "required": ["badges", "shieldScore"],
          "properties": {
            "badges": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["key", "title", "severity", "impact", "tags"],
                "properties": {
                  "key": { "type": "string", "minLength": 1 },
                  "title": { "type": "string", "minLength": 1 },
                  "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
                  "impact": { "type": "string", "enum": ["negative", "neutral", "positive"] },
                  "tags": {
                    "type": "array",
                    "items": { "type": "string", "minLength": 1 }
                  }
                }
              }
            },
            "shieldScore": {
              "type": "object",
              "additionalProperties": false,
              "required": ["grade", "score"],
              "properties": {
                "grade": { "type": "string", "enum": ["A", "B", "C", "D", "E"] },
                "score": { "type": "number", "minimum": 0, "maximum": 100 },
                "rationale": { "type": "string" },
                "rulesTriggered": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            }
          }
        },

        "notes": { "type": "string" }
      }
    },

    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requestId"],
      "properties": {
        "requestId": { "type": "string", "minLength": 8 },
        "started": { "type": "integer", "minimum": 0 },
        "durationMs": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
