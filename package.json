{
  "name": "bags-shield-app",
  "version": "1.0.0",
  "description": "Frontend App for Bags Shield project on Vercel",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings=0",
    "dev-v0": "node scripts/dev-server.cjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "test:prod": "newman run docs/postman/bags-shield-api-v0.postman_collection.json --folder Production --env-var baseUrlProd=https://bags-shield-api.vercel.app --reporters cli",
    "test:local": "newman run docs/postman/bags-shield-api-v0.postman_collection.json --folder \"Local Dev (AJV)\" --env-var baseUrlLocal=http://127.0.0.1:8888 --reporters cli",
    "test:all": "npm run test:prod && npm run test:local",
    "smoke": "node scripts/smoke-local.cjs",
    "smoke:prod": "node -e \"process.env.SMOKE_BASE_URL='https://bags-shield-api.vercel.app'; process.env.SMOKE_STRICT='1'; require('./scripts/smoke-runner.js')\"",
    "smoke:relaxed": "node scripts/smoke-runner.js",
    "test:launchpad": "node scripts/test-launchpad-all.js",
    "smoke:launchpad": "powershell -ExecutionPolicy Bypass -File scripts/smoke-launchpad.ps1",
    "start:render": "node scripts/server.cjs",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "check:secrets": "bash scripts/check-secrets.sh",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@vercel/analytics": "^1.6.1",
    "@vercel/node": "3.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "express": "4.21.1",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@bubblewrap/cli": "^1.24.1",
    "@types/node": "20.14.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^10.1.8",
    "newman": "^6.2.1",
    "postcss": "^8.4.41",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.5.3"
  },
  "type": "module",
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,js}": [
      "eslint --fix"
    ],
    "*": [
      "bash scripts/check-secrets.sh"
    ]
  }
}
